# Upstream definition for Next.js app
upstream nextjs_app {
    server app:3000;
    keepalive 32;
}

# HTTP to HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name staging.bingoscape.org;

    # Allow Let's Encrypt verification
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# Redirect next.bingoscape.org to bingoscape.org
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name next.bingoscape.org;

    # SSL Configuration
    ssl_certificate /etc/nginx/ssl/live/staging.bingoscape.org/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/staging.bingoscape.org/privkey.pem;

    # SSL Security Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    return 301 https://staging.bingoscape.org$request_uri;
}

# Redirect www.bingoscape.org to bingoscape.org
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name www.bingoscape.org;

    # SSL Configuration
    ssl_certificate /etc/nginx/ssl/live/staging.bingoscape.org/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/staging.bingoscape.org/privkey.pem;

    # SSL Security Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    return 301 https://staging.bingoscape.org$request_uri;
}

# Main application server
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name staging.bingoscape.org;

    # SSL Configuration
    ssl_certificate /etc/nginx/ssl/live/staging.bingoscape.org/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/staging.bingoscape.org/privkey.pem;

    # SSL Security Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security Headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Client body size
    client_max_body_size 20M;

    # Serve uploaded files directly from nginx
    location /uploads {
        alias /var/www/uploads;
        expires 30d;
        access_log off;
        add_header Cache-Control "public, immutable";
        add_header X-Content-Type-Options "nosniff" always;
    }

    # Proxy all other requests to Next.js app
    location / {
        proxy_pass http://nextjs_app;
        proxy_http_version 1.1;

        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';

        # Forwarded headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Buffering
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;

        # Cache bypass
        proxy_cache_bypass $http_upgrade;
    }

    # Optional: Handle Next.js static files with caching
    location /_next/static {
        proxy_pass http://nextjs_app;
        expires 365d;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # Optional: Handle Next.js image optimization
    location /_next/image {
        proxy_pass http://nextjs_app;
        proxy_cache_valid 200 60m;
        add_header X-Cache-Status $upstream_cache_status;
    }
}
